---
interface Props {
  link?: string;
}

const { link } = Astro.props;
---

{
  link ? (
    <a href={link} class="group block">
      <div class="w-full rounded-2xl border border-gray-200/50 bg-white/80 p-6 shadow-lg backdrop-blur-sm transition-all duration-300 group-hover:scale-105 group-hover:border-gray-300/60 group-hover:shadow-xl dark:border-gray-700/50 dark:bg-gray-800/80 dark:group-hover:border-gray-600/60">
        <slot />
      </div>
    </a>
  ) : (
    <div class="w-full max-w-md rounded-2xl border border-gray-200/50 bg-white/80 p-6 shadow-lg backdrop-blur-sm dark:border-gray-700/50 dark:bg-gray-800/80">
      <slot />
    </div>
  )
}
