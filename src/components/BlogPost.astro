---
interface Props {
  title: string;
  url: string;
  date: string;
}

const { title, url, date } = Astro.props;
---

<div class="flex flex-col gap-2 py-4 sm:flex-row sm:items-center sm:gap-6">
  <p
    class="w-42 shrink-0 text-lg font-normal text-gray-500 transition-colors duration-300 sm:text-right"
  >
    {
      new Date(date).toLocaleString("en-us", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    }
  </p>
  <h3
    class="text-lg font-semibold text-black transition-colors duration-300 hover:text-gray-500 dark:text-white dark:hover:text-gray-500"
  >
    <a href={url}>{title}</a>
  </h3>
</div>
