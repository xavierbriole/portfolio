---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404">
  <section>
    <div class="mx-auto flex max-w-7xl px-4 sm:px-6 md:-mt-20 md:h-screen">
      <div class="m-auto py-12 md:py-20">
        <div class="text-center">
          <h1
            class="text-5xl font-extrabold tracking-tight text-balance sm:text-7xl"
          >
            404
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            The page you're looking for doesn't exist.
          </p>
          <div
            class="mt-10 flex max-w-none flex-col flex-nowrap gap-6 sm:flex-row sm:justify-center"
          >
            <div class="flex w-full sm:w-auto">
              <a
                href="/"
                class="w-full rounded-full bg-black px-8 py-3 text-lg font-medium text-white shadow-xs transition-colors duration-300 hover:bg-gray-700 dark:bg-white dark:text-gray-950 dark:hover:bg-white/90"
                >Home</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
